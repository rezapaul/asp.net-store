@model EndPoint.Website.Models.ViewModels.Address.AddressViewModel
@{
    ViewData["Title"] = "افزودن آدرس";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header-height"></div>

<div class="breadcrumb-area mt-37 hm-4-padding">
    <div class="container-fluid">
        <div class="breadcrumb-content text-center">
            <h2>صفحه پرداخت</h2>
            <ul>
                <li>
                    <a href="~/">خانه</a>
                </li>
                <li>افزودن آدرس</li>
                @section Message
                {
                    @{
                        await Html.RenderPartialAsync("Alert");
                    }

                }
            </ul>
        </div>
    </div>
</div>

<div class="banner-area hm-4-padding">
    <div class="container-fluid">
        <div class="banner-img">
            <a href="#"><img src="~/assets/img/banner/16.jpg" alt=""></a>
        </div>
    </div>
</div>


<div class="checkout-area pt-130 hm-3-padding pb-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-12">
                <form asp-action="Add" asp-controller="Address" method="post">
                    <div class="checkbox-form">
                        <h4>افزودن آدرس</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    <label>نام و نام خانوادگی <span class="required">*</span></label>
                                    <input type="text" asp-for="FullName" placeholder="" /><br>
                                    <span asp-validation-for="FullName" class="text-danger"></span><br />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>نشانی <span class="required">*</span></label>
                                    <input type="text" asp-for="FullAddress" placeholder="آدرس" /><br>
                                    <span asp-validation-for="FullAddress" class="text-danger"></span><br />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    <label>شهر / شهر <span class="required">*</span></label>
                                    <input type="text" asp-for="City" /><br>
                                    <span asp-validation-for="City" class="text-danger"></span><br />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    <label>کشور / استان <span class="required">*</span></label>
                                    <input type="text" asp-for="Province" placeholder="" /><br>
                                    <span asp-validation-for="Province" class="text-danger"></span><br />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    <label>کد پستی / پستی <span class="required">*</span></label>
                                    <input type="text" asp-for="ZipCode" /><br>
                                    <span asp-validation-for="ZipCode" class="text-danger"></span><br />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    <label>تلفن  <span class="required">*</span></label>
                                    <input type="text" asp-for="Phone" /><br>
                                    <span asp-validation-for="Phone" class="text-danger"></span><br />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-outline-warning">افزودن آدرس</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
