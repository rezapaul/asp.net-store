@using MyStore.Application.Services.Carts.Queries.IGetCartService
@model CartDto


    <div class="sidebar-cart onepage-sidebar-area">
        <div class="wrap-sidebar">
            <div class="sidebar-cart-all">
                <div class="sidebar-cart-icon">
                    <button class="op-sidebar-close"><span class="ti-close"></span></button>
                </div>
                <div class="cart-content">
                    <h3>سبد خرید</h3>
                    @if (Model.CartItems.Count > 0)
                    {
                        <ul>
                            @foreach (var item in Model.CartItems)
                            {
                                <li class="single-product-cart">
                                    <div class="cart-img">
                                        <a href="~/products/detail/@item.ProductId"><img src="~/@item.ProductImage" width="80" height="80" alt=""></a>
                                    </div>
                                    <div class="cart-title">
                                        <h3><a href="~/products/detail/@item.ProductId">@item.ProdductName</a></h3>
                                        <span>@item.Count x @item.Price = @(item.Price* item.Count) تومان</span>
                                    </div>
                                    <div class="cart-delete">
                                        <form asp-action="Remove" asp-controller="Cart" method="post">
                                            <input type="hidden" value="@item.Id" name="CartItemId" />
                                            <button type="submit" class="btn-danger border-0">  <i class="ion-ios-trash-outline" aria-hidden="true"></i></button>
                                        </form>
                                    </div>
                                </li>
                            }
                            <li class="single-product-cart">
                                <div class="cart-total">
                                    <h4>جمع : <span>@Model.SumProducts.ToString("n0") تومان</span></h4>
                                </div>
                            </li>
                        </ul>
                        <div class="cart-checkout-btn">
                            <a class="cr-btn btn-style cart-btn-style" href="~/cart"><span>مشاهده سبد</span></a>
                            <a class="cr-btn btn-style cart-btn-style" href="~/checkout"><span>پرداخت کنید</span></a>
                        </div>
                    }
                    else
                    {
                        <p>سبد خرید شما خالیست.</p>
                        <a href="~/products"> رفتن به فروشگاه</a>
                    }
                </div>
            </div>
        </div>
    </div>
