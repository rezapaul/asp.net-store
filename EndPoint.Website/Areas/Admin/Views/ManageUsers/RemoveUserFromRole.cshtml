@model EndPoint.Website.Areas.Admin.Models.ViewModels.ManageUsersViewModel.AddUserToRoleViewModel
@{
    ViewData["Title"] = "پاک کردن مقام";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<h2>کاستن مقام کاربر</h2>

<form asp-controller="ManageUsers" asp-action="RemoveUserFromRole" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    @if (!Model.UserRoles.Any())
    {
        <h1>هیچ مقامی یافت نشد</h1>
    }
    else
    {
        for (int i = 0; i < Model.UserRoles.Count; i++)
        {
            <div class="form-group">
                <input asp-for="@Model.UserRoles[i].IsSelected" />
                <label>@Model.UserRoles[i].RoleName</label>

                <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
            </div>
        }
    }

    <input type="hidden" asp-for="@Model.UserId" />
    <button class="btn btn-primary" type="submit">اعمال کردن</button>
</form>

