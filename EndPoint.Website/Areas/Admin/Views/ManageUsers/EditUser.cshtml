@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "ویرایش کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<h2>ویرایش نام کاربری</h2>

<form asp-controller="ManageUsers" asp-action="EditUser" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="control-label" asp-for="UserName"></label>
        <input class="form-control" asp-for="UserName" />
    </div>

    <input type="hidden" asp-for="Id" />

    <button class="btn btn-primary" type="submit">اعمال کردن</button>
</form>


