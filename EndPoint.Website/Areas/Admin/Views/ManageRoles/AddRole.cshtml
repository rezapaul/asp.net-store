@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<h1>افزودن مقام</h1>

<form asp-area="Admin" asp-controller="ManageRoles" asp-action="AddRole" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="control-label">نام مقام :</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <button class="btn btn-primary" type="submit">اعمال کردن</button>
</form>

