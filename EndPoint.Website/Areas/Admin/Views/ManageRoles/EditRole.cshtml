
@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}

<h2>ویرایش مقام</h2>

<form asp-area="Admin" asp-controller="ManageRoles" asp-action="EditRole" asp-route-id="@Model.Id" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="control-label">نام مقام :</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <button class="btn btn-primary" type="submit">اعمال کردن</button>
</form>

