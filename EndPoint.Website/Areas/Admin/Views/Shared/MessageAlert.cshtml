@if (TempData["Message"] != null)
{
    <div style=" background-color: #23C552; color: white; " id="message" class="container">
        <div class="alert alert alert-dismissible text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
            <strong class="text">
                @TempData["Message"]
            </strong>
        </div>
    </div>
}